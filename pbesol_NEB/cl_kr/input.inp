&GLOBAL
  RUN_TYPE  BAND
  PROJECT_NAME pbesol_64
  PRINT_LEVEL  MEDIUM
  FLUSH_SHOULD_FLUSH T
  PREFERRED_DIAG_LIBRARY SL
&END GLOBAL

&FORCE_EVAL
 STRESS_TENSOR ANALYTICAL
 METHOD QS

&DFT
  &MGRID
    CUTOFF 900
    REL_CUTOFF 80
  &END MGRID
   CHARGE 0
   MULTIPLICITY 1
  &QS
   METHOD GPW
  &END QS
  &SCF
   SCF_GUESS RESTART
   MAX_SCF 50
   EPS_SCF 1.E-5
   &OT ON
     PRECONDITIONER FULL_SINGLE_INVERSE
     MINIMIZER DIIS
   &END
   &OUTER_SCF
     MAX_SCF 200
     EPS_SCF 1.E-5
   &END OUTER_SCF
  &END SCF
  &XC
      &XC_FUNCTIONAL
          &PBE
            PARAMETRIZATION PBESOL
            SCALE_X 1.0
          &END PBE
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
          DISPERSION_FUNCTIONAL PAIR_POTENTIAL
          &PAIR_POTENTIAL
            TYPE DFTD3
            CALCULATE_C9_TERM .FALSE.
            PARAMETER_FILE_NAME dftd3.dat
            REFERENCE_FUNCTIONAL PBEsol
          &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
   &END XC
   BASIS_SET_FILE_NAME BASIS_MOLOPT
     POTENTIAL_FILE_NAME POTENTIAL
    &POISSON
      POISSON_SOLVER PERIODIC
      &EWALD
        ALPHA  1.0
      &END EWALD
    &END POISSON
 &END DFT 
 
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_FORMAT  xyz
      COORD_FILE_NAME start.xyz
      CONNECTIVITY OFF
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
     &END TOPOLOGY
    &CELL
      ABC  21.64 21.64 21.64
      ALPHA_BETA_GAMMA 90.0 90.0 90.0
      PERIODIC XYZ
    &END CELL
    &KIND H
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND C
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND N
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND Zn
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND Cl
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND Kr
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &BAND 
    BAND_TYPE  IT-NEB  
    NUMBER_OF_REPLICA  64
    K_SPRING 0.05 
    NPROC_REP 72
    
    ALIGN_FRAMES .T.
    ROTATE_FRAMES .T. 
    
  &CONVERGENCE_CONTROL
    MAX_FORCE 0.001
    RMS_FORCE 0.0005
  &END

  &CONVERGENCE_INFO ON
    COMMON_ITERATION_LEVELS 1
  &END CONVERGENCE_INFO

  &OPTIMIZE_BAND
    OPTIMIZE_END_POINTS F
    OPT_TYPE  DIIS
      &DIIS
        MAX_STEPS  300
      &END DIIS
  &END OPTIMIZE_BAND
    &REPLICA
      COORD_FILE_NAME start.xyz
    &END REPLICA
    &REPLICA
      COORD_FILE_NAME mid.xyz
    &END REPLICA
    &REPLICA
      COORD_FILE_NAME end.xyz
    &END REPLICA
  &END BAND
&END MOTION
